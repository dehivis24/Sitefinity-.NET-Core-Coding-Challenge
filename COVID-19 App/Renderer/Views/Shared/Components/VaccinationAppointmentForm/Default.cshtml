@model Renderer.ViewModels.VaccinationAppointment.AppointmentViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Progress.Sitefinity.AspNetCore

<script type="text/javascript" src="~/scripts/vaccinationAppointment.js"></script>

<div class="appointment-form">
    <div class="container section-custom-container">
        <form id="appointment-form" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row justify-content-center">
                <h1 class="col-10 text-section-title">Appointment</h1>
                <div class="col-3 text-underlining"></div>
            </div>
            <div class="form-group row col-2 mt-1">
                <label asp-for="Identifier" class="control-label"></label>
                <input asp-for="Identifier" class="form-control border-text" />
                <span asp-validation-for="Identifier" class="form-text text-danger"></span>
            </div>
            <div class="form-row row mt-1">
                <div class="form-group col-4">
                    <label asp-for="FirstName" class="control-label">First Name</label>
                    <input asp-for="FirstName" class="form-control border-text" />
                    <span asp-validation-for="FirstName" class="form-text text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="LastName" class="control-label">Last Name</label>
                    <input asp-for="LastName" class="form-control border-text" />
                    <span asp-validation-for="LastName" class="form-text text-danger"></span>
                </div>
            </div>
            <div class="form-group row col-2 mt-1">
                <label asp-for="Birthday" class="control-label"></label>
                <input type="date" asp-for="Birthday" class="form-control border-text" />
                <span asp-validation-for="Birthday" class="form-text text-danger"></span>
            </div>
            <div class="form-row row mt-1">
                <div class="form-group col-2">
                    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                    <input type="tel" asp-for="PhoneNumber" class="form-control border-text" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input type="email" asp-for="Email" class="form-control border-text" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row row mt-1">
                <div class="form-group col-2">
                    <label asp-for="AppointmentDate" class="control-label">Date</label>
                    <input type="date" asp-for="AppointmentDate" class="form-control border-text" />
                    <span asp-validation-for="AppointmentDate" class="form-text text-danger"></span>
                </div>
                <div class="form-group col-2">
                    <label asp-for="AppointmentTime" class="control-label">Time</label>
                    <input type="time" asp-for="AppointmentTime" class="form-control border-text" value="07:00" min="07:00" max="18:00" />
                    <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row row mt-1">
                <div class="form-group col-2">
                    <label asp-for="Regions" class="control-label"></label>
                    <select class="form-control border-text appoint-select" name="regions" id="regionSelector" asp-for="Region" asp-items="@Model.Regions">
                    </select>
                </div>
                <div class="form-group col-2">
                    <label asp-for="Cities" class="control-label"></label>
                    <select class="form-control border-text appoint-select" name="cities" id="citySelector" asp-for="City" asp-items="@Model.Cities">
                    </select>
                </div>
                <div class="form-group col-3">
                    <label asp-for="Sites" class="control-label"></label>
                    <select class="form-control border-text appoint-select" id="siteSelector" asp-for="Site" asp-items="@Model.Sites">
                    </select>
                </div>
            </div>
            <div class="form-group col-6 mt-1 mb-2 row">
                <label asp-for="AppointmentDetails" class="control-label">Details</label>
                <textarea class="form-control border-text" asp-for="AppointmentDetails" rows="3"></textarea>
                <span asp-validation-for="AppointmentDetails" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-submit">Submit</button>
            </div>
        </form>
    </div>


    <div class="modal fade" id="appointmentResult" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="">
                        <h5 class="appointment-title"> Appointment Confirmation</h5>
                    </div>                   
                </div>
                <div class="modal-body">
                    <div class="form-group mt-3 row justify-content-center">
                        <i class="far fa-calendar-check fab-calendar"></i>
                    </div>
                    <div class="mt-3 text-center">

                        <p id="appointmentName"></p>
                        <p>Your appointment has been scheduled:</p>
                        <p id="appointmentDate"></p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="closeModal" type="button" class="btn btn-submit" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</div>

